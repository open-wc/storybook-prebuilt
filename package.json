{
  "name": "storybook-prebuilt",
  "version": "1.5.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "A prebuilt storybook version for web components",
  "author": "open-wc",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "wds --node-resolve --app-index demo/index.html --open",
    "build": "rm -rf dist && NODE_ENV=production node --max-old-space-size=16384 node_modules/.bin/rollup -c rollup/rollup.config.js",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run"
  },
  "files": [
    "dist",
    "*.js",
    "*.js.map",
    "addon-*",
    "theming"
  ],
  "dependencies": {
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/prettier-config": "^1.1.0",
    "@open-wc/testing-helpers": "^1.8.9",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@storybook/addon-a11y": "^6.0.22",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-backgrounds": "^6.0.22",
    "@storybook/addon-console": "^1.2.2",
    "@storybook/addon-docs": "^6.0.22",
    "@storybook/addon-knobs": "^6.0.22",
    "@storybook/addon-links": "^6.0.22",
    "@storybook/addon-storysource": "^6.0.22",
    "@storybook/addon-viewport": "^6.0.22",
    "@storybook/addons": "^6.0.22",
    "@storybook/theming": "^6.0.22",
    "@storybook/web-components": "^6.0.22",
    "@web/dev-server": "^0.0.10",
    "babel-loader": "^8.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.9.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.4.0",
    "lit-element": "^2.4.0",
    "magic-string": "^0.25.7",
    "rollup": "^2.28.2",
    "rollup-plugin-babel": "^5.0.0-alpha.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.0.0",
    "storybook-addon-web-components-knobs": "^0.3.17"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off"
    }
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
